<UserControl x:Class="GeoLib.Controls.BoxWithText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoLib.Controls"
             xmlns:viewModels="clr-namespace:GeoLib.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="114.894" d:DesignWidth="247.292" d:DataContext="{d:DesignInstance viewModels:BoxWithTextViewModel}">
    <Grid>
        <Button Command="{Binding OkCommand}"  Content="Ok" HorizontalAlignment="Left" Margin="56,72,0,0" VerticalAlignment="Top" Width="75"/>
        <Button  Command="{Binding CancelCommand}" Content="Cancel" HorizontalAlignment="Left" Margin="145,72,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="117,13,0,0" TextWrapping="Wrap" Text="{Binding IntegerValue}" VerticalAlignment="Top" Width="103"/>
        <Label Content="Enter offset value" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
